<div class="index_page">

  <table>
    <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td class="show_td"><%= blog.content %></td>
        <td class="show_td"><%= link_to '詳細', blog_path(blog.id) %></td>
        <td class="show_td"><%= link_to '編集', edit_blog_path(blog.id) %></td>
        <td class="show_td"><%= link_to '削除', blog_path(blog.id), method: :delete ,
                       data: { confirm: '本当に削除してもよろしいですか?' } %></td>
       </tr>
     <% end %>
     </tbody>
  </table>

  <br>

  <%= link_to 'New Tweet', new_blog_path %>
</div>
