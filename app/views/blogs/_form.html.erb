<%= form_with(model: @blog ,url: blogs_path ) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @blog.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div>
  <%= form.text_area :content ,placeholder: "投稿する内容" ,id: "textarea" %>
  <br>
  <%= form.submit "投稿する" ,class: "btn btn-primary" %>
</div>
<% end %>



<%= link_to "入力内容をリセットする", "/blogs/new", data: {confirm: '本当にリセットしますか?'}  %>

