<h1>ログイン</h1>

<%= form_with(model:@user,local: true) do |f| %>  <!-- js読み込みlocalは後ほど変更する -->
  <%= f.label :名前 %>
  <%= f.text_field :name %>

  <%= f.label :メールアドレス %>
  <%= f.email_field :email %>

  <%= f.label :パスワード %>
  <%= f.password_field :password %>

  <%= f.label :もう一度パスワードを入力して下さい %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "アカウントを作成する" %>

<% end %>